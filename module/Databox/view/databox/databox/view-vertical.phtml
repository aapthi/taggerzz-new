function deletedComment(id){
	$.ajax({
			url: BASE_URL+'/databox/delete-comment',
			dataType: "json",
			type	: "POST",
			data	:{databox_comment_id:id},
			success: function( data ) {
				if(data.output!=0) {
					$('#comment'+id).remove();
					alert('comment deleted');
				}else{
					alert('No data is found');
				}
			}	
	});
}
